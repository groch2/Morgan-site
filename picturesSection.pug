doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        title= "Drawings by Morgan Bancon"
        meta(name="description" content="Drawings by Morgan Bancon")
        meta(name="author" content="Morgan Bancon")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet" type="text/css" href=require("./slideshow.sass").default)
    body
        div(id="miniaturesMosaic")
            a(href="./index.html")= "home"
            button(id="openBtn")="open slideshow"
        div(id="slideshow" style="display: none;")
            span(id="closeBtn" class="w3-button w3-display-topright cursor")!="&#xD7;" 
            div(class="btn-container")
                button(id="plusBtn" class="w3-button w3-round w3-black")!="&#x276E;" 
            each picture in pictures
                img(class="picture" src=picture.file)
            div(class="btn-container")
                button(id="minusBtn" class="w3-button w3-round w3-black")!="&#x276F;" 
            each picture in pictures
                label(class="picture-label")= picture.name
