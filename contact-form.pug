doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        title= "The art of Morgan Bancon"
        meta(name="description" content="Contact form")
        meta(name="author" content="Morgan Bancon")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet" type="text/css" href=require("./style.sass").default)
        link(rel="stylesheet" type="text/css" href=require("./contact-form.sass").default)
        link(rel="icon" href="data:,")
    body
        -
            var contactLinkPosition = navLinks.findIndex(({ text }) => /contact/i.test(text))
        nav(id="left-side-nav-links")
            h1= "MORGAN BANCON"
            each link, index in navLinks
                a(href=link.href style=index === contactLinkPosition ? 'text-decoration: underline' : '')= link.text
        header
            h1= "MORGAN BANCON"
            div(id="header-links")
                each link, index in navLinks
                    a(href=link.href style=index === contactLinkPosition ? 'text-decoration: underline' : '')= link.text
            div(id="burger-menu-container")
                button(id="burger-menu" class="hamburger-box")
                    div(class="hamburger-top")
                    div(class="hamburger-middle")
                    div(class="hamburger-bottom")
        main(class="w3-row")
            div(id="overlay")
            span(id="contact-form-text" class="w3-half")="You can contact me using this form"
            form(class="w3-quarter" onsubmit="return false;")
                div(class="float-container")
                    label(for="name")= "Name"
                    input(id="name" data-placeholder="name")
                div(class="float-container")
                    label(for="email")= "Email"
                    input(id="email" data-placeholder="email" required pattern="(?:[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*|\"(?:[\\x01-\\x08\\x0b\\x0c\\x0e-\\x1f\\x21\\x23-\\x5b\\x5d-\\x7f]|\\\\[\\x01-\\x09\\x0b\\x0c\\x0e-\\x7f])*\")@(?:(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?|\\[(?:(?:(2(5[0-5]|[0-4][0-9])|1[0-9][0-9]|[1-9]?[0-9]))\\.){3}(?:(2(5[0-5]|[0-4][0-9])|1[0-9][0-9]|[1-9]?[0-9])|[a-z0-9-]*[a-z0-9]:(?:[\\x01-\\x08\\x0b\\x0c\\x0e-\\x1f\\x21-\\x5a\\x53-\\x7f]|\\\\[\\x01-\\x09\\x0b\\x0c\\x0e-\\x7f])+)\\])")
                div(class="float-container")
                    label(for="message")= "Message"
                    textarea(id="message" data-placeholder="message")
                input(type="submit" value="Send Message" class="w3-button w3-border")